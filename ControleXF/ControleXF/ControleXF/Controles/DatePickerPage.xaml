<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleXF.Controles.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker
                TextColor="Red"
                Format="dd/MM/yyyy"
                MinimumDate="01/01/2000"
                MaximumDate="01/01/2018"
                Date="11/20/2018"
                
                DateSelected="DatePicker_DateSelected"
                />
            <Label x:Name="LblResultado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>